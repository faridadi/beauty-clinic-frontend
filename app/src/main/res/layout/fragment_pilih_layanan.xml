<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cont_pilih_layanan"
    android:background="@color/colorBackground"
    tools:context=".mainscreen.home.konsultasi.PilihLayananFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_10sdp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorBackground"
                    >
                    <EditText
                        android:id="@+id/edt_keluhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@null"
                        android:textColor="@color/colorWhite"
                        android:textColorHint="@color/colorWhite"
                        android:hint="Keluhan"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_10sdp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorBackground"
                    >
                    <EditText
                        android:id="@+id/edt_area_keluhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@null"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:hint="Area Keluhan"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_10sdp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorBackground"
                    >
                    <EditText
                        android:id="@+id/edt_lama_keluhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@null"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:hint="Lama Keluhan"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_10sdp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorBackground"
                    >
                    <EditText
                        android:id="@+id/edt_riwayat_cream"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@null"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:hint="Riwayat Crem"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_10sdp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorBackground"
                    >
                    <EditText
                        android:id="@+id/edt_riwayat_perawatan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorWhite"
                        android:background="@null"
                        android:textColorHint="@color/colorWhite"
                        android:textColor="@color/colorWhite"
                        android:hint="Riwayat Perawatan"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_20sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_10sdp"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_20sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorBackground"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_tanggal_konsultasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tanggal Konsultasi"
                            android:textColor="@color/colorWhite"
                            android:paddingBottom="@dimen/_8sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            />
                        <ImageView
                            android:id="@+id/ic_calendar"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/ic_calendar_white"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_20sdp"

                            />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_simpan_pilihLayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:background="@drawable/button_cancel"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                />
        </LinearLayout>
    </ScrollView>



</FrameLayout>