<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        android:backgroundTint="@color/colorWhite"
        android:layout_margin="10dp"
        >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        android:layout_margin="2dp"
        android:backgroundTint="@color/colorBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/header_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Selama Bulan Februari [Promo Februari]"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="10dp"
                android:src="@drawable/img_promo"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/event_bulan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Promo Februari]"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/event_ketenangan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount 20% untuk setiap facial Detox dan
Facial Oxy"
                    android:textColor="@color/colorWhite"/>
                <TextView
                    android:id="@+id/event_kontak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reservasi Hubungi 085736177163"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>


</FrameLayout>