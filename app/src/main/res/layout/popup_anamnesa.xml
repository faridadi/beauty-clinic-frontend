<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/colorWhite"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        android:backgroundTint="@color/colorProfileBackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_gravity="top"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_popup3"/>
                <ImageView
                    android:id="@+id/img_popup_anamnesa_exit"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_popup_exit"
                    android:layout_gravity="right"
                    />

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_10sdp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="@dimen/_10sdp">
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="#D9EECA"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                >
                                <LinearLayout
                                    android:layout_width="388dp"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Keluhan"
                                        android:textColor="@color/colorBlue" />

                                    <TextView
                                        android:id="@+id/tv_popup_keluhan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sakit Pinggang, sakit Dada d" />

                                </LinearLayout>


                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="#D9EECA"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Area Keluhan"
                                        android:textColor="@color/colorBlue"
                                        />
                                    <TextView
                                        android:id="@+id/tv_popup_area_keluhan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sakit Pinggang, sakit Dada d"/>

                                </LinearLayout>


                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="#D9EECA"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Lama Keluhan"
                                        android:textColor="@color/colorBlue"
                                        />
                                    <TextView
                                        android:id="@+id/tv_popup_lama_keluhan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sakit Pinggang, sakit Dada d"/>

                                </LinearLayout>


                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="#D9EECA"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Riwayat Cream"
                                        android:textColor="@color/colorBlue"
                                        />
                                    <TextView
                                        android:id="@+id/tv_popup_riwayat_cream"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sakit Pinggang, sakit Dada d"/>

                                </LinearLayout>


                            </android.support.v7.widget.CardView>
                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="#D9EECA"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_10sdp"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Riwayat Perawatan"
                                        android:textColor="@color/colorBlue"
                                        />
                                    <TextView
                                        android:id="@+id/tv_popup_riwayat_perawatan"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sakit Pinggang, sakit Dada d"/>

                                </LinearLayout>


                            </android.support.v7.widget.CardView>


                        </LinearLayout>
                </android.support.v7.widget.CardView>

                    </android.support.v4.widget.NestedScrollView>








            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>