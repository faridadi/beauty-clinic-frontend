<?xml version="1.0" encoding="utf-8"?>
        <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/header_informasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Service"
                android:textSize="20sp"
                android:textColor="@color/colorBlue"/>
            <TextView
                android:id="@+id/content_informasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dummy_informasi"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/hours_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours ago "/>
                <TextView
                    android:id="@+id/date_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[04/03/2019]"/>
            </LinearLayout>
        </LinearLayout>


