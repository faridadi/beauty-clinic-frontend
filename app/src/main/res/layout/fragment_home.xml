<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBookingSimpan"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainscreen.home.HomeFragment"
    android:id="@+id/con">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- TODO: Update blank fragment layout -->
        //Slide image
        <com.smarteist.autoimageslider.SliderLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:id="@+id/imageSlider">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_promo"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/img_promo"/>
        </com.smarteist.autoimageslider.SliderLayout>


        //Informasi
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informasi"
            android:textSize="23sp"
            android:textColor="@color/colorWhite"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:backgroundTint="@color/colorInformation"
            >
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/item_home_information"
                />
        </android.support.v7.widget.CardView>

        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chat"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            />-->
        <GridLayout
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <!-- 1 -->

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_row="0"
                android:layout_column="0"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorGreen">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_konsultasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_margin="1dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_doctor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Konsultasi"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>



            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1.5"
                android:layout_rowWeight="1.5"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_row="0"
                android:layout_column="1"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorGreen">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_treatment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="3"
                    android:layout_rowWeight="3"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_margin="1dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"

                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="1dp">
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_spa"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Treatment"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <!-- 3 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_row="0"
                android:layout_column="2"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorGreen">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_produk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_margin="1dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"

                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_cosmetic"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Produk"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:layout_column="0"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorGreen">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_medical_advice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_margin="1dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"

                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_stethoscope"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical Advice"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>



            <!-- 2 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="3dp"
                android:layout_row="1"
                android:layout_column="1"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorGreen">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_bill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_margin="1dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"

                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="1dp">
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_bill"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill"
                            android:textColor="@color/colorWhite"
                            android:layout_gravity="center"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <!-- 3 -->
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="10dp"
                android:layout_row="1"
                android:layout_column="2"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorGreen">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_rekamMedis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardCornerRadius="3dp"
                    android:backgroundTint="@color/colorBackground"
                    android:layout_margin="1dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                        <ImageView
                            android:layout_width="43dp"
                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_medical_records"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rekam Medis"
                            android:textColor="@color/colorWhite"
                            android:textSize="13sp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>
        </GridLayout>

    </LinearLayout>




</FrameLayout>