<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_20sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_1sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="@dimen/_13ssp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorProfileCardView"
                    >
                    <EditText
                        android:id="@+id/edt_profile_enter_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="enter password"
                        android:textColor="@color/colorBackground"
                        android:textColorHint="@color/colorBackground"
                        android:gravity="center"
                        android:background="@null"
                        android:backgroundTint="@color/colorProfileCardView"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_1sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:textSize="@dimen/_13ssp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorProfileCardView"
                    >
                    <EditText
                        android:id="@+id/edt_profile_enter_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="enter_new_password"
                        android:textColor="@color/colorBackground"
                        android:textColorHint="@color/colorBackground"
                        android:gravity="center"
                        android:background="@null"
                        android:backgroundTint="@color/colorProfileCardView"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_1sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re-Enter Password"
                    android:textSize="@dimen/_13ssp"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_8sdp"
                    android:layout_margin="@dimen/_2sdp"
                    android:backgroundTint="@color/colorProfileCardView"
                    >
                    <EditText
                        android:id="@+id/edt_profile_retype_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="re-enter new password"
                        android:textColor="@color/colorBackground"
                        android:textColorHint="@color/colorBackground"
                        android:gravity="center"
                        android:background="@null"
                        android:backgroundTint="@color/colorProfileCardView"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <Button
                android:id="@+id/button_profile_save_password"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_gravity="center"/>





        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>