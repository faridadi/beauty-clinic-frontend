<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:sv_stepsNumber="4"
        app:sv_selectedCircleColor="@color/colorGreen"
        app:sv_selectedTextColor="@color/colorGreen"
        app:sv_stepLineWidth="1dp"
        app:sv_stepPadding="4dp"
        app:sv_nextTextColor="@color/colorWhite"
        app:sv_nextStepLineColor="@color/colorWhite"
        app:sv_doneCircleColor="@color/colorBottomNav"
        app:sv_doneStepLineColor="@color/colorWhite"
        app:sv_doneCircleRadius="12dp"
        app:sv_selectedCircleRadius="12dp"
        app:sv_selectedStepNumberColor="@color/colorPrimary"
        app:sv_stepViewStyle="@style/StepView"
        app:sv_doneStepMarkColor="@color/colorPrimary"
        app:sv_stepNumberTextSize="12sp"
        app:sv_animationType="Line"
        app:sv_textSize="10sp"
       />

        <FrameLayout
            android:id="@+id/content_konsultasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:animateLayoutChanges="true">
        </FrameLayout>

    </LinearLayout>

