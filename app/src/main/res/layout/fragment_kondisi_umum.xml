<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainscreen.home.konsultasi.kondisiUmum.KondisiUmumFragment"
    android:id="@+id/cont_kondisi_umum"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Wajah Bagian"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/wajah_posisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depan"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="@dimen/_4sdp"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_20sdp"
            android:backgroundTint="@color/colorWhite"
            android:layout_margin="@dimen/_10sdp"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_216sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardElevation="@dimen/_20sdp"
                android:layout_margin="@dimen/_2sdp"
                android:backgroundTint="@color/colorBackground"
                >
                <ImageView
                    android:id="@+id/mother_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/retake"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Re-take Picture"
                    android:textSize="@dimen/_8ssp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:visibility="invisible"
                    />

            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <GridLayout
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            >

        <!-- 1 -->

        <android.support.v7.widget.CardView
            android:id="@+id/bagian_depan"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_30sdp"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="@dimen/_5sdp"
            android:backgroundTint="@color/colorWhite">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_konsultasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                app:cardCornerRadius="@dimen/_5sdp"
                android:backgroundTint="@color/colorBackground"
                android:layout_margin="@dimen/_1sdp"
                >
                    <ImageView
                        android:id="@+id/img_depan"
                        android:scaleType="fitXY"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="fill"
                        />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <!-- 2 -->
        <android.support.v7.widget.CardView
            android:id="@+id/bagian_kiri"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_row="0"
            android:layout_column="1"
            app:cardCornerRadius="@dimen/_5sdp"
            android:backgroundTint="@color/colorWhite">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_treatment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                app:cardCornerRadius="@dimen/_5sdp"
                android:backgroundTint="@color/colorBackground"
                android:layout_margin="@dimen/_1sdp"
                >

                    <ImageView
                        android:id="@+id/img_kiri"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="fitXY"
                        android:layout_gravity="fill"
                       />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <!-- 3 -->
        <android.support.v7.widget.CardView
            android:id="@+id/bagian_kanan"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_columnWeight="1"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_row="0"
            android:layout_column="2"
            app:cardCornerRadius="@dimen/_5sdp"
            android:backgroundTint="@color/colorWhite">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_produk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                app:cardCornerRadius="@dimen/_5sdp"
                android:backgroundTint="@color/colorBackground"
                android:layout_margin="@dimen/_1sdp"
                >
                    <ImageView
                        android:id="@+id/img_kanan"
                        android:scaleType="fitXY"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="fill"
                        />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/colorWhite"
                android:text="Depan"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@color/colorWhite"
                android:text="Kiri"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="2"
                android:textColor="@color/colorWhite"
                android:text="Kanan"
                android:layout_gravity="center"
                />
        </GridLayout>

        <Button
            android:id="@+id/btn_simpan_kondisiUmum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Simpan"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorYellow"
            android:layout_margin="@dimen/_10sdp"/>
    </LinearLayout>
    </ScrollView>

</FrameLayout>