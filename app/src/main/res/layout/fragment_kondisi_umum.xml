<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainscreen.home.konsultasi.KondisiUmumFragment"
    android:id="@+id/cont_kondisi_umum"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto Wajah Bagian"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:id="@+id/wajah_posisi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depan"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="4dp"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp"
            android:backgroundTint="@color/colorWhite"
            android:layout_margin="10dp"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="297dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="20dp"
                android:layout_margin="2dp"
                android:backgroundTint="@color/colorBackground"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <GridLayout
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            >

        <!-- 1 -->

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            android:layout_row="0"
            android:layout_column="0"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/colorWhite">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_konsultasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorBackground"
                android:layout_margin="1dp"
                >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill"
                        />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>



        <!-- 2 -->
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_columnWeight="1.8"
            android:layout_rowWeight="1.8"
            android:layout_marginBottom="6dp"
            android:layout_row="0"
            android:layout_column="1"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/colorWhite">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_treatment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorBackground"
                android:layout_margin="1dp"
                >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill"
                       />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>

        <!-- 3 -->
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="30dp"
            android:layout_row="0"
            android:layout_column="2"
            app:cardCornerRadius="5dp"
            android:backgroundTint="@color/colorWhite">
            <android.support.v7.widget.CardView
                android:id="@+id/cv_produk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="5dp"
                android:backgroundTint="@color/colorBackground"
                android:layout_margin="1dp"
                >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill"
                        />
            </android.support.v7.widget.CardView>
        </android.support.v7.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="30dp"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="@color/colorWhite"
                android:text="Depan"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="@color/colorWhite"
                android:text="Kiri"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="2"
                android:textColor="@color/colorWhite"
                android:text="Kanan"
                android:layout_gravity="center"
                />
        </GridLayout>

        <Button
            android:id="@+id/btn_simpan_kondisiUmum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Simpan"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/colorYellow"
            android:layout_margin="10dp"/>
    </LinearLayout>

</FrameLayout>